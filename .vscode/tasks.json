            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "main.exe",
                "main.cpp",
                "TabelaHash.cpp",
                "ListaEncadeada.cpp",
                "No.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
